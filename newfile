<!DOCTYPE html>
<html>
  <body>
    <style>
      body{
        margin: none;
      }
      #container{
        height: 25rem;
      }
      #myBox1{
        height: 50px;
        width: 50px;
        border: 5px solid;
        background-color: red;
        position: relative;
      }
      #controls{
        align-items: center;
        text-align: center;
        background-color: hsl(0, 0%, 30%);
        height: 200px;
      }
      #controls button{
        width: 50px;
        height: 50px;
        border: none;
        margin-top: 50px;
        font-weight: bold;
        background-color: hsl(0, 0%, 70%);
      }
    </style>
    <div id="container">
    <div id="myBox1"></div>
    </div>
    <hr>
    <div id="controls">
      <button id="upBtn">up</button>
      <button id="leftBtn">left</button>
      <button id="rightBtn">right</button>
      <button id="downBtn">down</button>
    </div>
    <script>
      const moveUP = document.getElementById("upBtn");
      const moveLeft = document.getElementById("leftBtn");
      const moveRight = document.getElementById("rightBtn");
      const moveDown = document.getElementById("downBtn");
      const myBox = document.getElementById("myBox1");

      moveUP.addEventListener("click", event => {
        myBox.style.top = `${parseFloat(myBox.style.top || 0) - 10}px`;
      });
      moveLeft.addEventListener("click", event => {
        myBox.style.left = `${parseFloat(myBox.style.left || 0) - 10}px`;
      });
      moveRight.addEventListener("click", event => {
        myBox.style.left = `${parseFloat(myBox.style.left || 0) + 10}px`;
      });
      moveDown.addEventListener("click", event => {
        myBox.style.top = `${parseFloat(myBox.style.top || 0) + 10}px`;
      });
    </script>
  </body>
</html>
